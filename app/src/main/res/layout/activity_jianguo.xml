<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_label_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="坚果云账号密码获取教程：\n
1.注册坚果云\n
2.登录后点击右上角用户名，选择【账户信息】\n
3.页面跳转后选择【安全选项】，右下方可见【第三方应用管理】\n
4.点击添加应用，生成密码\n
5.成功后来到本页面，点击右上角图标进行配置"
            android:textColor="@color/red400" />

        <LinearLayout
            android:id="@+id/ll_jianguo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="webdav账户，长按可复制" />

            <TextView
                android:id="@+id/tv_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_label_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="--- 备份 ---"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="上次同步时间:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_local"
                style="@style/dialog_blue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_label_sure"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:text="1.导出加密文件"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_local_to_cloud"
                style="@style/dialog_blue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_label_sure"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="上传到云端"
                android:textSize="16sp" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_label_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="--- 恢复 ---"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_time_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="上次恢复时间:" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cloud"
                style="@style/dialog_blue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_label_sure"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="1.检查云端文件"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_cloud_to_local"
                style="@style/dialog_blue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/search_label_sure"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="2.恢复到本地"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cloud_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3" />
    </LinearLayout>


</LinearLayout>