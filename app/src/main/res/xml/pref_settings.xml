<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="pref_cate_base"
        android:title="通用">
        <cf.paradoxie.dizzypassword.view.ThemeChoice
            android:key="theme_change"/>
        <EditTextPreference
            android:key="id_change"
            android:title="后台时长(单位:秒)"
            android:paddingLeft="5dp"
            android:summary="程序进入后台时间达到时长将自动锁定操作权限"
            android:inputType="number"
            android:gravity="center"
            android:hint="默认值为60秒"
            android:maxLength="3"/>
        <EditTextPreference
            android:key="id_code"
            android:title="更换安全码"
            android:paddingLeft="5dp"
            android:summary="更换进入App时的六位安全码，指纹用户请忽略(*^__^*)"
            android:inputType="number"
            android:gravity="center"
            android:hint="请输入6位新的安全码"
            android:maxLength="6">
        </EditTextPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_cate_other"
        android:title="其他">
        <PreferenceScreen
            android:key="share"
            android:title="分享">
        </PreferenceScreen>
        <PreferenceScreen
            android:key="about"
            android:title="关于">
        </PreferenceScreen>
        <PreferenceScreen
            android:key="group"
            android:title="加群"
            android:summary="点击复制QQ群号，一起来玩耍">
        </PreferenceScreen>
        <PreferenceScreen
            android:key="red_package"
            android:title="领红包"
            android:summary="点击前往支付宝领取，最近的红包好像都变大了">
        </PreferenceScreen>

    </PreferenceCategory>
</PreferenceScreen>